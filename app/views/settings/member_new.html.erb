<% title t('.title') %>

<%= form_tag settings_member_new_path(@owner), method: :post, :id => 'members-new'  do %>

  <%= simple_format(t('.explanation')) %>

  <div class="form-group">
    <label for="member_ids"><%= t('.search_label') %></label>
    <%= text_field_tag "member_ids", '', class: 'form-control', :data => { load: params[:member_error_ids]} %>
  </div>
  <div class="form-group">
    <label for="message"><%= t('.message') %></label>
    <%= text_area_tag "message", params[:message], rows: 5, class: 'form-control' %>
  </div>

  <div class="control-group submit-row">
    <%= submit_tag t('app.buttons.save'), :class => 'btn btn-primary' %>
  </div>

<% end %>
