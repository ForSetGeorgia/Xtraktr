              link_class = 'xtraktr'
              img_path = '/assets/svg/xtraktr_logo.svg'
            end
          %>
          <%= link_to root_path(:locale => I18n.locale),:class=>"navbar-brand #{link_class}" do %>
            <%= image_tag img_path, :id => 'logo', :alt => t('app.common.app_name') %>
