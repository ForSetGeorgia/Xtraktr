<%- model_class = Dataset -%>
<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <%= render :partial => 'layouts/head' %>

    <% if @shapes_url.present? %>
      <script src="<%= @shapes_url %>"></script>
    <% end %>

  </head>
  <body>

    <%= render :partial => 'layouts/nav' %>

    <nav id="dataset-navbar" class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
        <%= link_to @dataset.title, @dataset_url,:class=>"navbar-brand" if @dataset.created_at.present? %>
        </div>

        <div class="collapse navbar-collapse" id="navbar-collapse">
          <ul class="nav navbar-nav navbar-left">
            <li role="menuitem">
              <%= link_to t('helpers.links.back_dashboard'), explore_data_dashboard_path(@dataset) %>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if @is_admin && @dataset.created_at.present? %>
              <li class="dropdown" role="menuitem">
                <%= render partial: 'layouts/dataset_menu', locals: {dataset: @dataset} %>
              </li>
            <% end %>
            <% if @is_admin %>
              <li role="menuitem">
                <%= link_to t('app.menu.all_datasets'), datasets_path %>
              </li>
            <% end %>
          </ul>

        </div><!--/.nav-collapse -->
      </div><!-- /.container-fluid -->
    </nav>


    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <div id="flash-message">
            <% flash.each do |key, msg| %>
              <div class="alert <%= flash_translation(key) %> fade in">
                <a href="#" data-dismiss="alert" class="close">Ã—</a>
                <%= msg %>
              </div>
            <% end %>
          </div>
          
          <% if @show_title == true && content_for?(:title) %>
            <div class="page-header">
              <h1><%= yield(:title) %></h1>
            </div>
          <% end %>

          <%= yield %>
        </div><!--/span-->
      </div><!--/row-->
    </div> <!-- /container -->

    <%= render :partial => 'layouts/footer' %>


    <% if @is_admin && @dataset.created_at.present? %>
      <div class="modal fade" id="private-share" tabindex="-1" role="dialog" aria-labelledby="private-share-header" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"><%= t('helpers.links.close') %></span></button>
              <h4 class="modal-title" id="private-share-header">
                <%= t('.private_share_header', title: @dataset.title) %>
              </h4>
            </div>
            <div class="modal-body">
              <p>
                <%= t('.private_share_explanation', title: @dataset.title) %>
              </p>
              <p>
                <%= link_to private_share_url(@dataset.private_share_key), 
                    private_share_url(@dataset.private_share_key) %>
              </p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag  *(@js.present? ? ["application", @js].flatten : ["application"]), :media => "all" %>      
    <script type="text/javascript">
      I18n.defaultLocale = "<%= I18n.default_locale %>";
      I18n.locale = "<%= I18n.locale %>";
    </script>

    <% if Rails.env.production? %>
      <!-- insert google analytics for production site here -->
    <% elsif Rails.env.staging? %>
      <!-- insert google analytics for staging site here -->
    <% end %>

  </body>
</html>
