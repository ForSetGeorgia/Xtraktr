<%
  include_parent_div ||= false
%>              

            <% if include_parent_div %>
              <div class="dropdown">
            <% end %>
                <a href="#" class="options-menu dropdown-toggle" data-toggle="dropdown">
                  <!-- <img src="/assets/svg/options.svg"/> -->
                  <%= t('app.menu.admin_dataset.heading') %>
                  <img src="/assets/svg/arrow.svg"/>
                </a>
                <ul class="dropdown-menu" role="menu">
                  <li role="menuitem">
                    <%= link_to dataset_path(dataset) do %>
                      <span class="glyphicon glyphicon-search"></span>
                      <%= t('app.menu.admin_dataset.explore_data') %>
                    <% end %>
                  </li>
                  <li role="menuitem">
                    <%= link_to download_data_dataset_path(dataset) do %>
                      <span class="glyphicon glyphicon-download-alt"></span>
                      <%= t('app.menu.admin_dataset.download_data') %>
                    <% end %>
                  </li>
                  <li class="divider"></li>
                  <li role="menuitem">
                    <%= link_to edit_dataset_path(dataset) do %>
                      <span class="glyphicon glyphicon-cog"></span>
                      <%= t('app.menu.admin_dataset.settings') %>
                    <% end %>
                  </li>
                  <li role="menuitem">
                    <%= link_to highlights_dataset_path(dataset) do %>
                      <span class="glyphicon glyphicon-star"></span>
                      <%= t('app.menu.admin_dataset.highlights') %>
                    <% end %>
                  </li>
                  <li role="menuitem">
                    <%= link_to warnings_dataset_path(dataset) do %>
                      <span class="glyphicon glyphicon-exclamation-sign"></span>
                      <%= t('app.menu.admin_dataset.warnings') %>
                    <% end %>
                  </li>
                  <% if !dataset.public? %>
                    <li role="menuitem">
                      <%= link_to '#private-share', :'data-toggle' => "modal"  do %>
                        <span class="glyphicon glyphicon-lock"></span>
                        <%= t('app.menu.admin_dataset.private_share') %>
                      <% end %>
                    </li>
                  <% end %>
                  <li class="divider"></li>
                  <li role="menuitem">
                    <%= link_to dataset_questions_path(dataset) do %>
                      <span class="glyphicon glyphicon-question-sign"></span>
                      <%= t('app.menu.admin_dataset.qa') %>
                    <% end %>
                  </li>
                  <li role="menuitem">
                    <%= link_to mass_changes_dataset_questions_path(dataset) do %>
                      <span class="glyphicon glyphicon-th-list"></span>
                      <%= t('app.menu.admin_dataset.mass_changes') %>
                    <% end %>
                  </li>
                  <li role="menuitem">
                    <%= link_to mass_changes_questions_dataset_path(dataset) do %>
                      <span class="glyphicon glyphicon-check"></span>
                      <%= t('app.menu.admin_dataset.mass_changes_questions') %>
                    <% end %>
                  </li>
                  <li role="menuitem">
                    <%= link_to mass_changes_answers_dataset_path(dataset) do %>
                      <span class="glyphicon glyphicon-check"></span>
                      <%= t('app.menu.admin_dataset.mass_changes_answers') %>
                    <% end %>
                  </li>
                  <li role="menuitem">
                    <%= link_to mappable_dataset_path(dataset) do %>
                      <span class="glyphicon glyphicon-map-marker"></span>
                      <%= t('app.menu.admin_dataset.mappable') %>
                    <% end %>
                  </li>
                  <li class="divider"></li>
                  <li role="menuitem">
                    <%= link_to dataset_path(dataset),
                        :method => 'delete',
                        :data => { :confirm => t("helpers.links.confirm") } do %>
  
                      <span class="glyphicon glyphicon-remove-circle"></span>
                      <%= t('app.menu.admin_dataset.delete') %>
                    <% end %>
                  </li>
                </ul>
            <% if include_parent_div %>
              </div>
            <% end %>