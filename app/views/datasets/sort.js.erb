$(document).ready(function(){
  var type="success";
  var msg = '<%= @msg %>';
  if (<%= @success %> == false){
    type="error";
  }

  var html = notification(type, msg);

  // hide the loader img
  $('.data-loader').fadeOut('fast');

  $('#page-wrapper > .content').prepend(html);
  $('.content > .message').delay(3000).fadeOut(3000);


  // scroll to the top
  $('html,body').animate({
    scrollTop: ($('body').offset().top)
  }, 1000);

});