<%- model_class = Question -%>
<% title t('.title') %>

<% questions = @dataset.questions.with_code_answers %>
<% if questions.present? %>

  <%= form_tag mass_changes_questions_dataset_path(@dataset), id: 'frm-dataset-exclude-questions' do %>

    <p>
      <%= t('.explanation') %>
    </p>

    <div class="dataset-exclude-questions-save">
      <%= submit_tag t('app.buttons.save_settings'), class: 'btn btn-success' %>
    </div>

    <table id='dataset-exclude-questions' class="table table-striped table-hover table-nonfluid">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:code) %></th>
          <th><%= model_class.human_attribute_name(:text) %></th>
          <th>
            <%= model_class.human_attribute_name(:exclude) %>
            <%= link_to '#', class: 'btn btn-default btn-xs btn-select-all', :'data-state' => 'all', :'data-type' => 'exclude' do %>
              <span class="glyphicon glyphicon-check" title="<%= t('helpers.links.select_all') %>"></span>
            <% end %>
          </th>
          <th>
            <%= model_class.human_attribute_name(:can_download) %>
            <%= link_to '#', class: 'btn btn-default btn-xs btn-select-all', :'data-state' => 'all', :'data-type' => 'download' do %>
              <span class="glyphicon glyphicon-check" title="<%= t('helpers.links.select_all') %>"></span>
            <% end %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% questions.each_with_index do |question, question_index| %>
          <tr>
            <td>
              <%= question.original_code %>
            </td>
            <td>
              <%= question.text %>
            </td>
            <td class="exclude-input">
              <input id="<%= "dataset_questions_attributes_#{question_index}_id" %>" 
                    name="<%= "dataset[questions_attributes][#{question_index}][id]" %>" 
                    type="hidden" value="<%= question.id %>">
              <input  
                    name="<%= "dataset[questions_attributes][#{question_index}][exclude]" %>" 
                    type="checkbox" value="true" <%= question.exclude == true ? 'checked=checked' : ''%>>
            </td>
            <td class="download-input">
              <input  
                    name="<%= "dataset[questions_attributes][#{question_index}][can_download]" %>" 
                    type="checkbox" value="true" <%= question.can_download == true ? 'checked=checked' : ''%>>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="dataset-exclude-questions-save">
      <%= submit_tag t('app.buttons.save_settings'), class: 'btn btn-success' %>
    </div>

  <% end %>

<% else %>
  <p>
    <%= t('.no_questions') %>
  </p>
<% end %>
