 $(document).ready(function(){
  var type="success";
  var msg = '<%= @msg %>';
  if (<%= @success %> == false){
    type="danger";
  }

  var html = '<div class="alert alert-'+ type +' fade in">' +
          '<a href="#" data-dismiss="alert" class="close">Ã—</a>' +
           msg +
          '</div>';

  // show the message
  $('#flash-message').fadeOut(300, function(){
    $('#flash-message').html(html).fadeIn(300);
  });

  // scroll to the top
  $('html,body').animate({
    scrollTop: ($('body').offset().top)
  }, 1000);

});