 $(document).ready(function(){
  var type="success",
    msg = '<%= @msg %>';
  if (<%= @success %> == false){ type="danger"; }

  var html = '<div class="alert alert-'+ type +' fade in"><a href="#" data-dismiss="alert" class="close">Ã—</a>' + msg + '</div>';
  
  $('#flash-message').fadeOut(300, function () { // show the message
    $('#flash-message').html(html).fadeIn(300);
  });

  page_wrapper.animate({ scrollTop: 0 }, 1000); // scroll to the top
});