<%- model_class = Dataset -%>
<% title t '.title', :default => model_class.model_name.human.pluralize %>

<div class="form-group form-group-admin-buttons">
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_dataset_path,
              :class => 'btn btn-primary' %>
</div>

<table id="dataset-datatable" class="table table-striped display">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <% if @is_xtraktr %>
        <th><%= model_class.human_attribute_name(:source) %></th>
      <% end %>
      <th><%= model_class.human_attribute_name(:languages) %></th>
      <th><%= model_class.human_attribute_name(:public) %></th>
      <th><%= model_class.human_attribute_name(:stats) %></th>
      <th><%= model_class.human_attribute_name(:has_warnings) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @datasets.each do |dataset| %>
      <tr>
        <td><%= link_to dataset.title, dataset_path(dataset) %></td>
        <% if @is_xtraktr %>
          <td><%= dataset.source %></td>
        <% end %>
        <td><%= format_languages(dataset) %></td>
        <td><%= format_public_status(dataset.public) %></td>
        <td data-order="<%= dataset.stats.data_records %>">
          <%= t('.stats.data_records') %>: <%= number_with_delimiter(dataset.stats.data_records) %>
          <br />
          <%= t('.stats.good_questions') %>: <%= number_with_delimiter(dataset.stats.questions_good) %>
        </td>
        <td>
          <% if dataset.has_warnings? %>
            <% if dataset.stats.questions_no_text > 0 %>
              <%= t('.stats.no_text') %>: <%= number_with_delimiter(dataset.stats.questions_no_text) %>
              <br />
            <% end %>
            <% if dataset.stats.questions_no_answers > 0 %>
              <%= t('.stats.no_answers') %>: <%= number_with_delimiter(dataset.stats.questions_no_answers) %>
              <br />
            <% end %>
            <% if dataset.stats.questions_bad_answers > 0 %>
              <%= t('.stats.bad_answers') %>: <%= number_with_delimiter(dataset.stats.questions_bad_answers) %>
              <br />
            <% end %>
            <%= link_to t('.view_warnings'), warnings_dataset_path(dataset), :class => 'btn btn-xs btn-details' %>
          <% end %>
        </td>
        <td><%= l dataset.created_at, format: :date_only %></td>
        <td class="dropdown">
          <%= render partial: 'layouts/dataset_menu', locals: {dataset: dataset, include_parent_div: true} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


