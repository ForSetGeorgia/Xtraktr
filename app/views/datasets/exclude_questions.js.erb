 $(document).ready(function(){
  var type="success";
  var msg = '<%= @msg %>';
  if (<%= @success %> == false){
    type="error";
  }

  var html = '<div class="alert alert-'+ type +' fade in">' +
          '<a href="#" data-dismiss="alert" class="close">Ã—</a>' +
           msg +
          '</div>';

  $('#flash-message').fadeOut(300, function(){
    $('#flash-message').html(html).fadeIn(300);
  });

});