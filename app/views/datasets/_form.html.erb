<%- model_class = Dataset -%>

<%= semantic_form_for @dataset, html: {:multipart => true, class: 'tabbed-translation-form'} do |f| %>
	<%= f.error_messages %>

	<%= f.inputs do %>
    <%= f.hidden_field :user_id , :value => current_user.id %>

    <div class="row">
      <div class="col-sm-4">
        <div class="file input required form-group" id="dataset_datafile_input">
          <label class="" for="dataset_datafile">
            <%= model_class.human_attribute_name(:datafile) %><abbr title="required">*</abbr>
          </label>
          <% if @dataset.datafile.exists? %>
            <p>
              <%= link_to t('helpers.links.download'), @dataset.datafile.url, :target => :blank, :class => 'btn btn-default' %>
            </p>
          <% end %>
          <input accept="application/x-spss-sav, application/octet-stream, text/csv, application/x-stata-dta" id="dataset_datafile" name="dataset[datafile]" type="file">
        </div>
      </div>
      <div class="col-sm-4">
        <div class="file input optional form-group" id="dataset_codebook_input">
          <label class="" for="dataset_codebook"><%= model_class.human_attribute_name(:codebook) %></label>
          <% if @dataset.codebook.exists? %>
            <p>
              <%= link_to t('helpers.links.download'), @dataset.codebook.url, :target => :blank, :class => 'btn btn-default' %>
            </p>
          <% end %>
          <input accept="text/plain, application/pdf, application/vnd.oasis.opendocument.text, application/vnd.openxmlformats-officedocument.wordprocessingml.document, application/msword" id="dataset_codebook" name="dataset[codebook]" type="file">
        </div>
      </div>
      <div class="col-sm-4">
        <%= f.input :public, as: :radio, inline: true %>
      </div>
    </div>


    <div class="row">
      <div class="col-sm-4">
        <%= f.input :start_gathered_at, :as => :string, :input_html => { :size => 20 } %>
      </div>
      <div class="col-sm-4">
        <%= f.input :end_gathered_at, :as => :string, :input_html => { :size => 20 } %>
      </div>
      <div class="col-sm-4">
        <%= f.input :released_at, :as => :string, :input_html => { :size => 20 } %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <%= f.input :languages, as: :select, :collection => @languages.map{|x| [x.name, x.locale]}, multiple: true, required: true,
              :input_html => {class: 'selectpicker-language languages', 
                :'data-live-search' => "true", :'data-selected-text-format' => "count>3", :'data-size' => "7",
                :'data-width' => "72%"} %>
      </div>
      <div class="col-sm-6">
        <% 
          primaries = nil
          if @dataset.languages.present?
            primaries = @languages.select{|x| @dataset.languages.include?(x.locale)}
          end
        %>
       
        <div class="select input required form-group" id="dataset_default_language_input">
          <label class="" for="dataset_default_language">
            <%= model_class.human_attribute_name(:default_language) %><abbr title="required">*</abbr>
          </label>
          <select class="selectpicker-language form-control default-language" data-live-search="true" data-selected-text-format="count>3" data-size="7" data-width="72%" 
                  id="dataset_default_language" name="dataset[default_language]">
            <% if @languages.present? %>
              <% @languages.each do |lang| %>
                <%
                  selected = ''
                  hide = 'class=hide'
                  if primaries.present? && primaries.include?(lang.locale)
                    hide = ''
                  end
                  if lang.locale == @dataset.default_language
                    selected="selected=selected"
                  end
                %>
                <option value="<%= lang.locale %>" <%= hide %> <%= selected %> ><%= lang.name %></option>
              <% end %>
            <% end %>
          </select>
        </div>
      </div>
    </div>


	<% end %>

  <hr />

  <div role="tabpanel" class="tabbed-translation-fields">
    <% 
      locales = [I18n.locale] 
      locales = @dataset.languages_sorted if @dataset.languages.present?
    %>

    <ul class="nav nav-tabs" role="tablist" 
        data-default-language-icon="<span class='glyphicon glyphicon-star' title='<%= t('helpers.default_language') %>'></span>">
      <%
        default_locale = I18n.locale.to_s 
        default_lang = '' 
      %>
      <% locales.each_with_index do |locale, index| %>
        <% 
          lang = @languages.select{|x| x.locale == locale.to_s}.first
          cls = ''
          if index == 0
            cls = 'class=active' 
            default_locale = locale
            default_lang = lang.present? ? lang.name : locale 
          end
        %>
        <li role="presentation" <%= cls %> data-locale="<%= locale %>">
          <a href="#<%= locale %>" aria-controls="home" role="tab" data-toggle="tab">
            <%= lang.present? ? lang.name : locale %>
          </a>
        </li>
      <% end %>
    </ul>

    <div class="tab-content">
      <% locales.each_with_index do |locale, index| %>
        <%
          cls = ''
          cls = 'in active' if index == 0
        %>

        <div role="tabpanel" class="tab-pane fade <%= cls %>" id="<%= locale %>" data-locale="<%= locale %>">
          <%= f.fields_for :title_translations, OpenStruct.new(f.object.title_translations) do |translation| %>
            <% 
              label = model_class.human_attribute_name(:title)
              if index > 0
                label << show_default_text(@dataset.title_translations[default_locale])
              end
            %>
            <%= translation.input locale, label: label.html_safe %>
          <% end %>
          <%= f.fields_for :source_translations, OpenStruct.new(f.object.source_translations) do |translation| %>
            <% 
              label = model_class.human_attribute_name(:source)
              if index > 0
                label << show_default_text(@dataset.source_translations[default_locale])
              end
            %>
            <%= translation.input locale, label: label.html_safe %>
          <% end %>
          <%= f.fields_for :source_url_translations, OpenStruct.new(f.object.source_url_translations) do |translation| %>
            <% 
              label = model_class.human_attribute_name(:source_url)
              if index > 0
                label << show_default_text(@dataset.source_url_translations[default_locale], 'url')
              end
            %>
            <%= translation.input locale, as: :url, required: false, label: label.html_safe %>
          <% end %>
          <%= f.fields_for :description_translations, OpenStruct.new(f.object.description_translations) do |translation| %>
            <% 
              label = model_class.human_attribute_name(:description)
              if index > 0
                label << show_default_text(@dataset.description_translations[default_locale])
              end
            %>
            <%= translation.input locale, :as => :text, required: false, rows: 10, label: label.html_safe, 
                :input_html => { class: "tinymce" } %>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>


  <div class="form-group">
    <%= f.submit nil, :class => 'btn btn-primary' %>
	  <%= f.submit t('helpers.links.reset'), :class => 'btn btn-warning', :type => :reset, :name => :reset %>
	  <%= link_to t('helpers.links.cancel'), datasets_path, :class => 'btn btn-warning' %>
  </div>
<% end %>

