$(document).ready(function(){
  var type="success", 
    msg = '<%= @msg %>';
  if (<%= @success %> == false){ type="error"; }

  var html = notification(type, msg);

  $('.data-loader').fadeOut('fast'); // hide the loader img

  $('#page-wrapper > .content').prepend(html);
  $('.content > .message').delay(3000).fadeOut(3000);

  page_wrapper.animate({ scrollTop: 0 }, 1000); // scroll to the top
});