<%- model_class = User -%>
<% title t('helpers.links.forgot_password') %> 

<div id="reset-password-form">
   <div class="red-box long"><%= t('helpers.links.password_reset') %></div>
   <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <div class="red-box-neighbor">
        <span><%= t('helpers.links.sign_up_question') %></span><br>
        <%= link_to t('helpers.links.sign_up'), new_registration_path(resource_name), :class => 'reattach sign-up-link' %>
      </div>
   <% end -%>   
  <%= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :"data-form-id"=>"reset-password-form" }) do |f| %>
     	<%= f.error_messages %>
     	<%= f.input :email, :as => :email, :input_html => { :size => 35 , :class => "login-username" }, :placeholder => model_class.human_attribute_name(:email).upcase , label: false  %>

      <div class="control-group control-group-sign-in">
         <%- if controller_name != 'sessions' %>
            <%= link_to t('helpers.links.sign_in'), new_session_path(resource_name), :class => 'sign-in-link reattach ' %>
         <% end -%>
      </div>

      <div class="control-group submit-row">
         <%= f.submit t('helpers.links.password_reset'), :class => 'btn btn-default pass-reset' %>
      </div>
   <% end %>
</div>