<% end %>


<% if @user.present? %>
<%= "#{t('mailer.notification.new_organization_member.all_invitations', :locale => @message.locale)}: #{settings_url(:locale => @message.locale, owner_id: @user.slug, page: 'organizations')}" %>
<% end %>
