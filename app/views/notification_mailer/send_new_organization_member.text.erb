<%= @message.message %>

<% @message.message_list.each do |msg| %>
<%= "#{t('mailer.notification.new_organization_member.from', :locale => @message.locale)}: #{msg[0]}" %>
<% if msg[2].present? %>
<%= msg[2] %>
<% end %>

<%= "#{t('mailer.notification.new_organization_member.accept_link', :locale => @message.locale)}: #{settings_accept_invitation_from_notification_url(:locale => @message.locale, :key => msg[1])}" %>

