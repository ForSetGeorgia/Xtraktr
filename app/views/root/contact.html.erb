<%- model_class = Message -%>
<div class="article contact">
  <div class="col">
  <div class="header"><%= @page_content.title %></div>

  <div class="intro"><%= simple_format_no_tags(@page_content.content, {}, {sanitize: false}) %></div>
  <%= semantic_form_for @message, :url => contact_path, :html => {class: 'contact-form'} do |f| %>
    <%= f.inputs do %>
      <%= f.input :name, :label => false, :placeholder => model_class.human_attribute_name(:name).upcase, input_html: {size: 50} %>
      <%= f.input :email, :label => false, :placeholder => model_class.human_attribute_name(:email).upcase+" *", input_html: {size: 50} %>
      <%= f.input :subject, :label => false, :placeholder => model_class.human_attribute_name(:subject).upcase, input_html: {size: 75} %>
      <%= f.input :message, required: true, :as => :text, :input_html => {:class => 'autogrow', :rows => 7} %>
    <% end %>
    <div>
      <%= f.submit t(".send"), :class => 'submit-message' %>
    </div>
  <% end %>
  </div>
  <div class="col">
    <div class="email">
      <div class="figure"></div>
      <div class="text"><%= mail_to "info@forset.ge", nil, :encode => "hex", :subject => t('mailer.contact.contact_form.subject') %></div>
    </div>
<% if false %>
    <div class="phone">
      <div class="figure"></div>
      <div class="text"><span>+995 032 214 29 26</span></div>
    </div>
<% end %>
    <div class="website">
      <div class="figure"></div>
      <div class="text"><%= link_to "https://forset.ge", "https://forset.ge",  :target => "_blank"%></div>
    </div>
    <div class="address">
      <div class="figure"></div>
      <div class="text"><span><%= t("app.common.org_address") %></span></div>
    </div>
  </div>
</div>
