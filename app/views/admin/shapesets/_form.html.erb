<%= tinymce_assets %>
<%= tinymce %>

<%= semantic_form_for([:admin, @shapeset]) do |f| %>
  <%= f.error_messages %>

  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :languages, as: :select, :collection => @languages.map{|x| [x.name, x.locale]}, :input_html => {multiple: true} %>
    <%= f.input :primary_language %>
    <%= f.input :source %>
    <%= f.input :source_url, as: :url %>
    <%= f.input :description, :as => :text, rows: 10, :input_html => { class: 'tinymce' } %>
    <%= f.input :shapefile, :as => :file, :input_html => { accept:"text/plain, application/json, application/octet-stream" }  %> 

    <%= f.hidden_field :user_id , :value => current_user.id %>
  <% end %>

  <div class="form-group">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= f.submit t('helpers.links.reset'), :class => 'btn btn-warning', :type => :reset, :name => :reset %>
    <%= link_to t('helpers.links.cancel'), admin_shapesets_path, :class => 'btn btn-mini btn-warning' %>
  </div>
<% end %>
