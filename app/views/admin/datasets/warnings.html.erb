<% title t('.title', :title => @dataset.title) %>

<div class="form-group form-group-admin-buttons">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_datasets_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_dataset_path(@dataset), :class => 'btn btn-default' %>
  <%= link_to t('helpers.links.admin'), admin_path, :class => 'btn btn-default' if current_user.role? User::ROLES[:admin] %>
</div>

<% if @dataset.has_warnings? %>

  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#bad_answers" role="tab" data-toggle="tab"><%= t('.tab_bad_answers') %></a></li>
    <li role="presentation"><a href="#no_answers" role="tab" data-toggle="tab"><%= t('.tab_no_answers') %></a></li>
  </ul>

  <div class="tab-content">
    <div role="tabpanel" class="tab-pane fade in active" id="bad_answers">
      <% if @bad_answers.present? %>
        <p>
          <%= t('.bad_answers', :number => @bad_answers.length) %>
        </p>

        <ul>
          <% @bad_answers.each do |bad| %>
            <% question = @dataset.questions.with_original_code(bad) %>
            <% if question.present? %>
              <li>
                <%= "#{question.original_code} - #{question.text}" %>
              </li>
            <% end %>
          <% end %>
        </ul>
      <% else %>

        <p>
          <%= t('.no_bad_answers') %>
        </p>
      <% end %>
    </div>

    <div role="tabpanel" class="tab-pane fade" id="no_answers">
      <% if @no_answers.present? %>
        <p>
          <%= t('.no_answers', :number => @no_answers.length) %>
        </p>

        <ul>
          <% @no_answers.each do |bad| %>
            <li>
              <%= "#{bad.original_code} - #{bad.text}" %>
            </li>
          <% end %>
        </ul>
      <% else %>

        <p>
          <%= t('.no_no_answers') %>
        </p>
      <% end %>
    </div>
  </div>

<% else %>

  <p>
    <%= t('.no_warnings') %>
  </p>

<% end %>