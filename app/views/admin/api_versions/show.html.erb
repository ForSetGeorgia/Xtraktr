<%- model_class = ApiVersion -%>
<% title t '.title', :default => model_class.model_name.human %>


<div class="form-group form-group-admin-buttons">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_api_versions_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_api_version_path(@api_version), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_api_version_path(@api_version),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
  <%= link_to t('helpers.links.admin'), admin_path, :class => 'btn btn-default' %>
</div>

<p><strong><%= model_class.human_attribute_name(:title) %>:</strong>
<%= @api_version.title %></p>

<p><strong><%= model_class.human_attribute_name(:permalink) %>:</strong>
<%= @api_version.permalink %></p>

<p><strong><%= model_class.human_attribute_name(:public) %>:</strong>
<%= @api_version.public %></p>

<p><strong><%= model_class.human_attribute_name(:public_at) %>:</strong>
<%= l @api_version.public_at, format: :day_first if @api_version.public_at %></p>




